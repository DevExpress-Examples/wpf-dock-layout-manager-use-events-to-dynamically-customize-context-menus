<Window
    x:Class="DockManager_MenuCustomization.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
    Title="Window1"
    Width="441"
    Height="462">
    <Grid>
        <dxdo:DockLayoutManager
            Name="dockManager1"
            ShowingMenu="dockManager1_ShowingMenu">
            <dxdo:LayoutGroup x:Name="rootGroup" Orientation="Horizontal">
                <dxdo:LayoutGroup x:Name="layoutGroup3" Orientation="Vertical">
                    <dxdo:LayoutPanel x:Name="paneSolutionExplorer" Caption="Solution Explorer" />
                    <dxdo:LayoutPanel x:Name="paneProperties" Caption="Properties" />
                </dxdo:LayoutGroup>
                <dxdo:DocumentGroup x:Name="documentGroup1">
                    <dxdo:DocumentPanel>
                        <RichTextBox />
                    </dxdo:DocumentPanel>
                </dxdo:DocumentGroup>
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>
    </Grid>
</Window>
